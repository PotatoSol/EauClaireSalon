@{
    Layout = "_Layout";
    //need more here
}
    @using HairSalon.Models;
    @if (Model.Count == 0){
        <p>Currently no vendors</p>
    }
    <ul>
        @foreach(Stylist aStylist in Model){
            <li><a href='@aStylist.StylistId'>@aStylist.Name (@aStylist.Id) --- @aStylist.Description</a></li>
            <ul>
                @foreach(Order myOrder in myVendor.VendorsOrders){
                    <li>@myOrder.Name ..... @myOrder.Price</li>
                }
            </ul>
            <form action="/orders/" method="post">
                <label name=`@myVendor.Id`></label>
                <button type="submit">Add new Order</button>
            </form>
        }
    </ul>
    <p><a href="/vendors/add">Add Vendor</a></p>