@{
    Layout = "_Layout";
}
@using HairSalon.Models;

@if (Model.Count == 0){
    <p>Currently no Stylists</p>
} else {
    <ul>
        @foreach(Stylist aStylist in Model){
            <li>@Html.ActionLink($"{aStylist.Name}", "Details", new { id = aStylist.StylistId })</li>
            <ol>
                @foreach(Client aClient in aStylist.ClientList){
                    <li>@Html.ActionLink($"{aClient.Name}", "Details", new { id = aClient.ClientId })</li>
                }
            </ol>
        }
    </ul>
}

<br>
<p>@Html.ActionLink("Add a Stylist", "Create")</p>