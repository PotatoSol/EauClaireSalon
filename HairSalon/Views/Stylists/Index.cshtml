@{
    Layout = "_Layout";
}
@using HairSalon.Models;

@if (Model.Count == 0){
    <p>Currently no Stylists</p>
} else {
    <ul>
        @foreach(Stylist aStylist in Model){
            <li>@Html.ActionLink($"{aStylist.Name}", "Details", new { id = aStylist.StylistId })</li>
        }
    </ul>
}

<br>
<p>@Html.ActionLink("Add a Stylist", "Create")</p>